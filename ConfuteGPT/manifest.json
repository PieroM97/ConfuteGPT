{
  "manifest_version": 3,
  "name": "ConfuteGPT Extension",
  "version": "1.0",
  "description": "ConfuteGPT - Your trustworthy information analyst",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png", 
      "32": "icons/icon48.png", 
      "48": "icons/icon48.png",
      "128": "icons/icon128.png" 
    }
  },
  "options_page": "options/options.html",
  "permissions": ["activeTab", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["scripts/script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
